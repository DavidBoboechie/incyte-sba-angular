  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9223,
      "request": "attach",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}/projects/vanilla-search",
    },
    {
      "name": "Launch",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://localhost:4200/#",
      "webRoot": "${workspaceFolder}/projects/vanilla-search",
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach Karma Chrome",
      "address": "localhost",
      "port": 9333,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      // Uncomment this to get diagnostic logs in the console
      "trace": true
    } 
  ]
}