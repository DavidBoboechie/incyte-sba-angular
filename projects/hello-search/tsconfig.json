{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "..",
        "paths": {
            "@sinequa/core": ["../core/public-api"],
            "@sinequa/core/*": ["../core/*"],
            "@sinequa/components": ["../components/public-api"],
            "@sinequa/components/*": ["../components/*"],
            "@sinequa/analytics": ["../analytics/public-api"],
            "@sinequa/analytics/*": ["../analytics/*"]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "**/*.ts",
        "src/environments/environment.ts"
    ],
    "exclude": [
        "e2e",
        "src/environments/*",
        "**/*.spec.ts",
        "src/test.ts"
    ]
}