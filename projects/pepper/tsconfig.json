{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "..",
        "paths": {
            "@sinequa/core": ["core/public-api"],
            "@sinequa/core/*": ["core/*"],
            "@sinequa/components": ["components/public-api", "charts/public-api"],
            "@sinequa/components/*": ["components/*", "charts/*"]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "./**/*.ts",
        "./src/environments/environment.ts"
    ],
    "exclude": [
        "./test.ts",
        "./e2e/**/*",
        "./src/environments/*",
        "./**/*.spec.ts"
    ]
}